{
    "src": {
        "css": [
            "src/css/**/*.less"
        ],
        "entry": [
            "src/js/**/entry.js"
        ],
        "baseJs": [
            "src/js/base/*.js"
        ],
        "js": [
            "src/js/**/*.js",
            "!src/js/**/entry.js"
        ],
        "html": [
            "src/**/*.html"
        ],
        "img": [
            "src/img/**/*.*"
        ],
        "clean": "dist/*"
    },
    "dest": {
        "css": "dist/css/",
        "img": "dist/img/",
        "js": "dist/js/",
        "html": "dist/",
        "module": "dist/module/"
    },
    "res": {
        "css": "dist/css/**/*.css",
        "js": "dist/js/**/*.js"
    },
    "modulePath" : "../module/"
}
